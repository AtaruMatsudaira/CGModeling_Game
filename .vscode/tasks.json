{
    // See https://go.microsoft.com/fwlink/?LinkId=733558
    // for the documentation about the tasks.json format
    "version": "2.0.0",
    "tasks": [
        {
            "type": "npm",
            "script": "start",
            "label": "npm: start",
            "isBackground": true,
            "presentation": {
                "echo": true,
                "reveal": "silent",
                "focus": false,
                "panel": "shared",
                "showReuseMessage": true
            },
            "problemMatcher": {
                "owner": "typescript",
                "pattern": {
                    "regexp": "_____"
                },
                "background": {
                    "activeOnStart": true,
                    "beginsPattern": "Compiling\\.\\.\\.$",
                    "endsPattern": "Compiled"
                }
            },
            "dependsOn": [
                "npm: testrun"
            ],
        },
        {
            "type": "npm",
            "script": "build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": [],
        },
        {
            "type": "npm",
            "script": "testrun",
            "problemMatcher": [],
        },
        {
            "type": "npm",
            "label": "npm: install local",
            "problemMatcher": [],
            "script": "install"
        },
        {
            "type": "shell",
            "label": "npm: install",
            "command": "npm link typescript ts-loader imports-loader raw-loader html-webpack-plugin",
            "dependsOn": [
                "rm -rf node_modules",
                "npm: install local",
            ],
            "problemMatcher": [],
        },
        {
            "type": "shell",
            "label": "rm -rf node_modules",
            "command": "echo rm-node_modules",
            "osx": {
                "command": "rm -rf node_modules",
            },
            "linux": {
                "command": "rm -rf node_modules",
            },
            "problemMatcher": [],
        }
    ]
}
